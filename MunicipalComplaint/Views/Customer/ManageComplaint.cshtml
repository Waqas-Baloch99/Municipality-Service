@model MunicipalComplaint.ViewModel.viewModel
@{
    ViewBag.Title = "ManageComplaint";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}

@if (Session.Count <= 0)
{
    Response.Redirect("/Customer/Home");
}

<!--Made with love by Mutiullah Samim -->
<!--Bootsrap 4 CDN-->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<!--Fontawesome CDN-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
<!--Custom styles-->

<div class="container m-5">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="home" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Rejected</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="profile" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Completed</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="contact" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Pending</a>
        </li>
    </ul>
    <div class="tab-content show active" id="myTabContent">
        <div class="tab-pane fade " id="home-tab">
            <div class="d-flex justify-content-center h-100">
                <div class="card col-12">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-lg-12 ">
                                <center> <h3>Manage Complaint</h3></center>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end social_icon">
                            <!--    <span><i class="fab fa-facebook-square"></i></span>
                        <span><i class="fab fa-google-plus-square"></i></span>
                        <span><i class="fab fa-twitter-square"></i></span>
                        -->
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover table-bordered" id="manageComplain">
                            <thead>
                                <tr>
                                    <th>ID#</th>
                                    <th>Title</th>
                                    <th>Type</th>
                                    <th>Description</th>
                                    <th>Town</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model.complaint)
                                {
                                    if (data.UserId == Convert.ToInt32(Session["user_id"]))
                                    {
                                        <tr>
                                            <td>@data.ComplainId</td>
                                            <td>@data.Title</td>
                                            <td>@data.ComplainType</td>
                                            <td>@data.Description</td>
                                            @foreach (var u in Model.ucs)
                                            {
                                                if (data.TownId == u.UcId)
                                                {
                                                    <td>@u.UCName</td>
                                                }
                                            }
                                            @if (@data.Status == 0)
                                            {
                                                <td>Pending</td>
                                            }
                                            else if (@data.Status == 1)
                                            {
                                                <td>Reject</td>
                                            }
                                            else if (@data.Status == 2)
                                            {
                                                <td>Accept</td>
                                            }
                                            <td>
                                                <a class="btn btn-primary btn-sm" href="/AdminPanel/GenerateComplaintReport/@data.ComplainId"><span><i class="fa fa-eye "></i></span></a>

                                            </td>

                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
        <div class="tab-pane fade " id="profile-tab">b</div>
        <div class="tab-pane fade" id="contact-tab" role="tabpanel">c</div>
    </div>
   
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Content/DataTable/dt.js"></script>
<link href="~/Content/DataTable/dtb.css" rel="stylesheet" />
@Scripts.Render("~/bundles/alertFile/alert")
<script>
    $(document).ready(function () {
      
    });
    function Close(id) {
        var id = id;
        $.ajax({
            //type: "GET",
            url: "/Customer/Close",
            cache: false,
            type: "POST",
            //data: data,
            data: { id: id },
            success: function (re) {
                swal({
                    title: "Good job!",
                    text: "Complain Successfully Closed!",
                    icon: "success",
                    button: true,

                }).then((value) => {

                    location.reload();
                    $('#btnClose').hide();
                });


            }
        })
    }

    $("ul li  a").on("click", function () {
        $("ul li .active").removeClass("active");
        $(this).addClass("active");
        var a = this.id;
        a = a + "_tab";
        $(".tab-content .active").removeClass("active");
        $("#" + a).addClass("active");
        console.log($("#" + a));
    });
</script>
<script src="~/Scripts/bootstrap.min.js"></script>