@Scripts.Render("~/bundles/alertFile/alert")
<script>
    $('#a').click(function () {
        $('#pending').hide();
        $('#assigned').show();
        $('#delivered').hide();
    });
    $('#p').click(function () {
        $('#pending').show();
        $('#assigned').hide();
        $('#delivered').hide();
    });
    $('#d').click(function () {
        $('#pending').hide();
        $('#assigned').hide();
        $('#delivered').show();;
    });
    $(document).ready(function () {
        $('#pending').show();
        $('#assigned').hide();
        $('#delivered').hide();
    });
    function Close(id) {
        var id = id;
        $.ajax({
            //type: "GET",
            url: "/Customer/Close",
            cache: false,
            type: "POST",
            //data: data,
            data: { id: id },
            success: function (re) {
                swal({
                    title: "Good job!",
                    text: "Complain Successfully Closed!",
                    icon: "success",
                    button: true,

                }).then((value) => {

                    location.reload();
                    $('#btnClose').hide();
                });


            }
        })
    }

    function addCommenttoComplaint() {
        var compid = $("#compId").val();
        var comment = $("#message").val();
        $.ajax({
            type: "POST",
            url: "/Customer/FeedbackComplaint",
            data: { compid: compid, comment: comment },
            success: function (re) {
                if (re == "done") {
                    swal({
                        title: "Successfull!",
                        text: "Status of the complaint has been chnaged successfully, Complaint is now closed",
                        icon: "success",
                        button: true,
                    }).then((value) => {
                        location.reload();
                    });;
                }
            }

        });
    }
    $('#myBtnClose').on('click', function () {
        $('#feedbackmodal').hide(1000);
    });

    function ReplyToComplaint(id) {
        $("#feedbackmodal").show("3000");
        $("#compId").val(id);
        $("#examplemodallabel").empty();
        $("#examplemodallabel").append("add feedback to complaint #" + id);
    }
</script>
