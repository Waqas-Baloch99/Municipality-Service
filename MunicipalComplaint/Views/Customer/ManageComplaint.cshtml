            margin-left: 4px;
        }

    a {
        text-decoration: none;
    }

        a:hover {
            color: white;
            text-decoration: none;
        }
</style>

<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card col-10">
            <div class="card-header">
                <div class="row">
                    <div class="col-lg-12 ">
                        <center> <h3>Manage Complaint</h3></center>
                    </div>
                </div>
                <div class="d-flex justify-content-end social_icon">
                    <!--    <span><i class="fab fa-facebook-square"></i></span>
                        <span><i class="fab fa-google-plus-square"></i></span>
                        <span><i class="fab fa-twitter-square"></i></span>
                        -->
                </div>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered" id="manageComplain">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Complain Type</th>
                            <th>Description</th>
                            <th> Town</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.complaint)
                        {
                            if (data.UserId == Convert.ToInt32(Session["user_id"]))
                            {
                                <tr>
                                    <td>@data.Title</td>
                                    <td>@data.ComplainType</td>
                                    <td>@data.Description</td>
                                    @foreach (var u in Model.ucs)
                                    {
                                        if (data.TownId == u.UcId)
                                        {
                                            <td>@u.UCName</td>
                                        }
                                    }
                                    @if(@data.Status==0){
                                    <td>Pending</td>
                                    }
                                    else if (@data.Status == 1)
                                    {
                                        <td>Reject</td>
                                    }
                                    else if (@data.Status == 2)
                                    {
                                        <td>Accept</td>
                                    }
                                    <td>
                                        <button class="btn btn-primary btn-sm" type="button" onclick="View(@data.ComplainId)"><span><i class="fa fa-eye "></i></span></button>
                                        @if(data.isvalid==0){
                                        <button class="btn btn-danger btn-sm" type="button" id="btnClose" onclick="Close(@data.ComplainId)"><span><i class="fa fa-trash "></i></span></button>
                                        }
                                    </td>

                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Content/DataTable/dt.js"></script>
<link href="~/Content/DataTable/dtb.css" rel="stylesheet" />
@Scripts.Render("~/bundles/alertFile/alert")
<script>
    $(document).ready(function () {
        $('#manageComplain').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
        });
    });
    function Close(id) {
        var id = id;
        $.ajax({
            //type: "GET",
            url: "/Customer/Close",
            cache: false,
            type: "POST",
            //data: data,
            data: { id: id },
            success: function (re) {
                swal({
                    title: "Good job!",
                    text: "Complain Successfully Closed!",
                    icon: "success",
                    button: true,

                }).then((value) => {

                    location.reload();
                    $('#btnClose').hide();
                });
              

            }
        })
    }
</script>
