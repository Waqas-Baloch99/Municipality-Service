@model MunicipalComplaint.ViewModel.viewModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<section class="section">
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card card-sm bg-primary">
                    <div class="card-icon">
                        <i class="fa fa-user"></i>
                    </div>
                    <div class="card-wrap">
                        <div class="card-body">
                            <label id="Employees">@ViewData["Employee"]</label>

                        </div>
                        <div class="card-header">
                            <h4>Total Employees</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card card-sm bg-danger">
                    <div class="card-icon">
                        <i class="fa fa-users"></i>
                    </div>
                    <div class="card-wrap">
                        <div class="card-body">
                            <label id="Users">@ViewData["Users"]</label>
                        </div>
                        <div class="card-header">
                            <h4>Users</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card card-sm bg-warning">
                    <div class="card-icon">
                        <i class="fa fa-paper-plane"></i>
                    </div>
                    <div class="card-wrap">
                        <div class="card-body">
                            <label id="Complains">@ViewData["Complaim"]</label>
                        </div>
                        <div class="card-header">
                            <h4>Complains</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card card-sm bg-dark">
                    <div class="card-icon">
                        <i class="ion ion-record"></i>
                    </div>
                    <div class="card-wrap">
                        <div class="card-body">
                            <label id="resolved">@ViewData["ResolveComp"]</label>
                        </div>
                        <div class="card-header">
                            <h4>Resolved Complains</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
