                    </div>
                </div>

            </div>
        </div>
    </div>

</section>
@*Provice Modal Start*@
<asp:ScriptManager ID="ScriptManager1" runat="server"></asp:ScriptManager>
<div class="modal fade" id="Province" runat="server" tabindex="-1" role="dialog" aria-labelledby="Province"
     aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content" style="margin-top:115px;border:1px solid gray;border-radius:20px;">
            <div class="modal-header">
                <h5 class="modal-title" id="H1" style="font-weight:500;color:#be1c1c">Add Province</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" id="myBtn">
                    &times;
                </button>
            </div>
            <div class="modal-body modal-body-sub">
                <div class="row">
                    <div class="col-md-12 modal_body_left modal_body_left1">
                        <div class="sap_tabs">

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="row">
                                    <div class="offset-1 col-md-10">
                                        <div class="form-group">
                                         </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="offset-3 col-md-6">
                                        <input type="submit" value="Submit" class="btn btn-success btn-block" />
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@*Provice Modal End*@