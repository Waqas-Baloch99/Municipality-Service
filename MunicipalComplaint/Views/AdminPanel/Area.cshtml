        <div class="row">

            <div class="col-12 col-sm-10 offset-sm-1 col-md-12 offset-md-0 col-lg-12 offset-lg-0 col-xl-12 offset-xl-0">
                <div class="login-brand">
                    Register User
                </div>
                <div class="card card-success">
                    <div class="card-header">

                    </div>


                    <div class="card-body">
                       
                           
                            <div class="row ">
                                <div class="offset-10 col-md-2">
                                    <a href="#Province" data-target="#Province" class="btn btn-success" data-toggle="modal"> Add Province</a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                <table class="table tab-bordered table-hover">
